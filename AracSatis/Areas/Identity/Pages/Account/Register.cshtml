@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}



<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <h1>@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Yeni bir hesap oluştur</h2>
            <hr />
            <div class="form-floating">
                <input asp-for="Input.Ad" class="form-control" autocomplete="Adınız" aria-required="true" />
                <label asp-for="Input.Ad"></label>
                <span asp-validation-for="Input.Ad" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Soyad" class="form-control" autocomplete="Soyadınız" aria-required="true" />
                <label asp-for="Input.Soyad"></label>
                <span asp-validation-for="Input.Soyad" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="Şifreniz" aria-required="true" />
                <label asp-for="Input.Password">Şifre</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="Şifrenizi onaylayın" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Şifrenizi onaylayın</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-5">Kayıt Ol</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
