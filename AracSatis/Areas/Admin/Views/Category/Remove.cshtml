@model CategoryVM

<div class="d-flex align-items-center justify-content-center mt-5">
    <form asp-action="Remove" method="post">
        <div>
            <h2>'@Model.Name' türünü veri tabanından tamamen kaldırmak istiyor musunuz?</h2>
        </div>
        <div>
            <input class="form-control" type="hidden" asp-for="Id" />
        </div>
        <div class="d-flex align-items-center justify-content-center mt-5">
            <button type="submit" class="btn-lg btn-danger">Kaldır</button>
            <a class="btn-lg btn-info ms-5" asp-action="GetDeleteds">Vazgeç</a>
        </div>
    </form>
</div>
