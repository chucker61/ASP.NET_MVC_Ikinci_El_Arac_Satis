@model ExtraTypeVM

<div class="d-flex justify-content-end mb-5">
    <a class="btn btn-secondary" asp-action="GetDeleteds">Silinenler Geçmişi</a>
</div>

<div style="height:450px; overflow-y:scroll">
    <table class="table table-secondary table-striped table-hovered">
        <thead>
            <tr>
                <th>Donanım Türleri</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.extraTypes)
            {
                <tr>
                    <td>@item.Name</td>
                    <td class="text-end">
                        <div>
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-light">Güncelle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>

<div class="d-flex justify-content-center mt-4">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Create">Donanım Türü Ekle</button>
</div>

<div class="modal" id = "Create">
    <div class="modal-dialog">
        <div class="modal-content p-3">
            <div class="model-header">
                <h3 class="modal-title">Donanım Türü Ekle</h3>
            </div>
            <form method="post" asp-action="Create">
                <div class="modal-body">
                    <label> Tür Adı</label>
                    <input type="text" class="form-control" asp-for="@Model.Name" />
                    <button class="btn btn-success mt-3">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>
