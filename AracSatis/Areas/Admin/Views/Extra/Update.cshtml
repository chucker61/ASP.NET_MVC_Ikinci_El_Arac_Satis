@model ExtraVM

<div class="d-flex align-items-center justify-content-center mt-5">
    <form asp-action="Update" method="post">
        <div>
            <h2>Güncellemek istediğiniz bilgileri giriniz.</h2>
        </div>
        <div>
            <input class="form-control" type="hidden" asp-for="Id" />
        </div>
        <div class="d-flex align-items-center justify-content-center mt-5">
            <input class="form-control-lg" type="text" asp-for="Name" />
        </div>
        <div class="d-flex align-items-center justify-content-center form-group mt-5 ">
            <label for="TypeId">Tür</label><br />
            <select class="form-control-lg" id="TypeId" name="TypeId">
                @foreach (var item in Model.ExtraTypes)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
        <div class="d-flex align-items-center justify-content-center mt-5">
            <button type="submit" class="btn-lg btn-success">Kaydet</button>
            <a class="btn-lg btn-info ms-5" asp-action="GetAll">Vazgeç</a>
        </div>
    </form>
</div>
