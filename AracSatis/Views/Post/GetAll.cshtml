@model PostVM

<div class="row">

    @if (Model.Posts.Count == 0)
    {
        <div class="mt-5">
            <h2>Görünüşe göre henüz yayınlanmış bir ilan yok</h2>
            <h3 class="mt-5">Siz oluşturmak ister misiniz?</h3>
            <a asp-controller="Post" asp-action="Create" class="btn-lg btn-warning mt-5 text-decoration-none">Oluştur!</a>
        </div>
    }

    @foreach (var post in Model.Posts)
    {
        <div class="card m-3" style="width: 18rem;">
            <a asp-controller="Post" asp-action="Offer" asp-route-id="@post.Id" style="text-decoration:none; color:black;">
            <div class="mb-1 align-self-end"></div>
            <p class="card-header fw-bold mt-auto">@post.Title.Substring(0,28)...</p>
            <h6 class="card-price mt-3 ">@post.Price.ToString()TL</h6>
            <img src="@post.CoverImage" height="200px" class="card-img-top" alt="deneme">
            <div class="card-body d-flex flex-column">
               
                <hr class="mt-1 mb-2" />
                <p class="card-text fw-lighter mt-auto"><i>@post.Description.Substring(0,50)...</i></p>
                
            </div>
            </a>
        </div>
    }
</div>





